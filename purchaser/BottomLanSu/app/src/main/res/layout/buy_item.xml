<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--//最最外层这里使得列表不空出大间隔-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <CheckBox
                android:id="@+id/shopcheckboxId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/shopimageId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/shopbuttonId"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/thingimageId"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/thingbuttonId"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/thingpriceId"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:textSize="24sp"
                android:textColor="#ff00"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/leftbuttonId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/thingnumId"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="24sp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/rightbuttonId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>


    <View  android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#666666"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>