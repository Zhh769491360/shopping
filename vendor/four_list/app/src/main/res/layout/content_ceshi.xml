<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ceshi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.zhh.four_list.List3Activity"
    tools:showIn="@layout/app_bar_ceshi">

    <com.example.zhh.four_list.SlideShowView
        android:id="@+id/slideshowView"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true" />

    <com.example.zhh.four_list.PublicNoticeView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.example.zhh.four_list.PublicNoticeView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#d5d2d2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sell_image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/taowang"/>

            <TextView
                android:id="@+id/sell_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:text="陶王零食铺"
                android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="店铺id:"
                    android:textColor="#000"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/sell_admin1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="13566666661"
                    android:textSize="17dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="余额"
                    android:textColor="#000"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/sell_money1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8000.0"
                    android:textSize="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="店铺简介:"
                    android:textSize="20dp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    本店商品均属正品，假一罚十信誉保证。欢迎广大顾客前来放心选贩，我们将竭诚为您朋务！"
                    android:textSize="17dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>




</LinearLayout>
